<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.InitialController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" spacing="15.0">
            <children>
                <Label text="初期設定 - 家計簿アプリ" styleClass="header-label" />
                
                <HBox spacing="10">
                    <Label text="現在の所持金:" />
                    <TextField fx:id="balanceField" promptText="金額を入力" />
                </HBox>
                
                <HBox spacing="10">
                    <Label text="給料日:" />
                    <TextField fx:id="paydayField" promptText="1～31を入力" />
                </HBox>

                <VBox spacing="10">
                    <TextField fx:id="categoryInputField" promptText="カテゴリーを入力" />
                    <Button fx:id="addCategoryButton" text="カテゴリーを追加" />
                    <ListView fx:id="categoryListView" prefHeight="150.0" />
                </VBox>

                <Button fx:id="nextButton" text="次へ" styleClass="primary-button" />
            </children>
        </VBox>
    </children>
</AnchorPane>

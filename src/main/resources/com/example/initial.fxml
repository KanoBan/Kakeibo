<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.InitialController" prefWidth="600.0" prefHeight="550.0">
    <children>
        <VBox layoutX="50.0" layoutY="30.0" spacing="20.0" prefWidth="500.0">
            <children>
                <Label text="初期設定 - 家計簿アプリ" styleClass="header-label" style="-fx-font-size: 24px;" />

                <HBox spacing="10.0">
                    <Label text="現在の所持金:" style="-fx-font-size: 18px;" />
                    <TextField fx:id="balanceField" promptText="金額を入力" prefWidth="300.0" style="-fx-font-size: 16px;" />
                </HBox>

                <HBox spacing="10.0">
                    <Label text="給料日:" style="-fx-font-size: 18px;" />
                    <TextField fx:id="paydayField" promptText="1～31を入力" prefWidth="300.0" style="-fx-font-size: 16px;" />
                </HBox>

                <VBox spacing="10.0">
                    <Label text="カテゴリー" style="-fx-font-size: 18px;" />
                    <TextField fx:id="categoryInputField" promptText="カテゴリーを入力" prefWidth="300.0" style="-fx-font-size: 16px;" />
                    <HBox spacing="10.0">
                        <Button fx:id="addCategoryButton" text="カテゴリーを追加" prefWidth="120.0" style="-fx-font-size: 14px;" />
                        <Button fx:id="removeCategoryButton" text="削除" prefWidth="80.0" style="-fx-font-size: 14px;" />
                    </HBox>
                    <ListView fx:id="categoryListView" prefHeight="150.0" prefWidth="400.0" style="-fx-font-size: 18px;" />
                </VBox>

                <Label text="※現在の所持金を設定するまで「次へ」を押せません" style="-fx-font-size: 14px; -fx-text-fill: red;" />

                <Button fx:id="nextButton" text="次へ" styleClass="primary-button" style="-fx-font-size: 18px; -fx-padding: 8 16;" disable="true" />
            </children>
        </VBox>
    </children>
</AnchorPane>
